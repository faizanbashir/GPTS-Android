<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mainbg"
    android:paddingTop="0dp"
    android:weightSum="100">

    <View
        android:layout_weight="63"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="invisible"/>

    <android.support.percent.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:paddingTop="0dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp">

            <ImageButton
                app:layout_marginTopPercent="2%"
                android:id="@+id/Catalogue"
                android:background="@android:color/transparent"
                android:layout_centerHorizontal="true"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_widthPercent="50%"
                app:layout_heightPercent="20%"/>

            <ImageButton
                android:background="@android:color/transparent"
                android:layout_below="@+id/Catalogue"
                android:id="@+id/UpComingEvent"
                android:layout_alignParentLeft="true"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_widthPercent="45%"
                app:layout_heightPercent="16%"
                app:layout_marginTopPercent="2%"/>

            <ImageButton
                android:background="@android:color/transparent"
                android:layout_below="@+id/Catalogue"
                android:id="@+id/NewLaunch"
                android:layout_alignParentRight="true"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_widthPercent="45%"
                app:layout_heightPercent="16%"
                app:layout_marginTopPercent="2%"/>

            <ImageButton
                android:background="@android:color/transparent"
                android:id="@+id/TurboFaliure"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/NewLaunch"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_widthPercent="50%"
                app:layout_heightPercent="14%"
                app:layout_marginTopPercent="2%"/>

            <ImageButton
                android:background="@android:color/transparent"
                android:layout_marginLeft="23dp"
                android:id="@+id/AboutUs"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/TurboFaliure"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_widthPercent="25%"
                app:layout_heightPercent="14%"
                app:layout_marginTopPercent="2%"/>

            <ImageButton
                android:background="@android:color/transparent"
                android:layout_marginLeft="23dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/Enquiry"
                android:layout_below="@+id/TurboFaliure"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_widthPercent="25%"
                app:layout_heightPercent="14%"
                app:layout_marginTopPercent="2%"/>

            <ImageButton
                android:background="@android:color/transparent"
                android:layout_marginRight="23dp"
                android:layout_alignParentRight="true"
                android:id="@+id/FAQ"
                android:layout_below="@+id/TurboFaliure"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_widthPercent="25%"
                app:layout_heightPercent="14%"
                app:layout_marginTopPercent="2%"/>

            <ImageButton
                android:background="@android:color/transparent"
                android:layout_centerHorizontal="true"
                android:id="@+id/Feedback"
                android:layout_below="@+id/Enquiry"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_widthPercent="50%"
                app:layout_heightPercent="16%"
                app:layout_marginTopPercent="2%"/>

    </android.support.percent.PercentRelativeLayout>

</LinearLayout>